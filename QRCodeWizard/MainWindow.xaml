<Window x:Class="QRCodeWizard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QRCodeWizard"
        mc:Ignorable="d"
        Title="QR Code Wizard" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        Icon="/Resources/logo_ev.ico"
        Background="{StaticResource PrimaryBackgroundBrush}"
        Loaded="Window_Loaded">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Input Area -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Text Input Box with Scroll -->
            <ScrollViewer Grid.Row="0" 
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Auto"
                          MaxHeight="200">
                <TextBox x:Name="EmailTextBox" 
                         Padding="5"
                         FontSize="14"
                         KeyDown="EmailTextBox_KeyDown"
                         ToolTip="Entrez des adresses e-mail ou des URLs séparées par des points-virgules (;)"
                         Background="{StaticResource SecondaryBackgroundBrush}"
                         Foreground="{StaticResource PrimaryTextBrush}"
                         BorderBrush="{StaticResource AccentBrush}"
                         TextWrapping="Wrap"
                         AcceptsReturn="False"
                         AcceptsTab="False"
                         HorizontalScrollBarVisibility="Disabled"
                         VerticalScrollBarVisibility="Auto"/>
            </ScrollViewer>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button x:Name="GenerateButton" 
                        Content="Générer" 
                        Padding="10,5"
                        Margin="0,0,10,0"
                        Click="GenerateButton_Click"
                        MinWidth="100"/>
                
                <Button x:Name="CancelButton" 
                        Content="Annuler" 
                        Padding="10,5"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"
                        Visibility="Collapsed"
                        Background="#E74C3C"
                        Foreground="White"
                        MinWidth="100"/>
                
                <Button x:Name="SaveButton" 
                        Content="Enregistrer" 
                        Padding="10,5"
                        Margin="0,0,0,0"
                        Click="SaveButton_Click"
                        IsEnabled="False"
                        MinWidth="100"/>
            </StackPanel>
        </Grid>
        
        <!-- QR Code Display Area -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <TextBlock x:Name="PlaceholderText" 
                       Text="Les QR codes apparaîtront ici après génération" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="16" 
                       Foreground="{StaticResource PrimaryTextBrush}"/>
            
            <Viewbox x:Name="QRCodeViewbox" 
                     Visibility="Collapsed" 
                     Stretch="Uniform">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled">
                    <UniformGrid x:Name="QRCodeGrid" 
                                 Columns="3" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"/>
                </ScrollViewer>
            </Viewbox>
        </Grid>
        
        <!-- Status Bar -->
        <Grid Grid.Row="2" Background="{StaticResource SecondaryBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="StatusText" 
                       Grid.Column="0"
                       Margin="10,5" 
                       Text="Prêt"
                       Foreground="{StaticResource PrimaryTextBrush}"/>
            
            <TextBlock x:Name="HoverText" 
                       Grid.Column="1"
                       Margin="10,5" 
                       Text="" 
                       TextAlignment="Right"
                       Foreground="{StaticResource PrimaryTextBrush}"/>
        </Grid>
    </Grid>
</Window>
